{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "~assets/*": ["./app/assets/*"],
      "~components/*": ["./app/components/*"],
      "~services/*": ["./app/services/*"],
      "~features/*": ["./app/features/*"],
      "~infrastructure/*": ["./app/infrastructure/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
